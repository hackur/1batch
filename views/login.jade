extends ./layout.jade

block content
  .row
    .col-sm-12
      h1
        span 1batch&nbsp;
        small is an app for sharing 8 photos.
  if forUser
    .row
      .col-sm-12.col-md-6
        p Hey, you're already logged in.
        br
        a(href="/profile")
          button.btn.btn-primary Your profile
        br
        br
        a(href="/logout")
          button.btn.btn-inverse Log Out
  else
    .row
      .col-sm-12.col-md-6
        form(action="/login", method="POST")
          p Let's get you logged in.
          label Username
          input(type="text", name="username")
          label Password
          input(type="password", name="password")
          br
          input(type="hidden", name="_csrf", value="#{csrfToken}")
          button.btn.btn-primary Log In
      .col-sm-12.col-md-6
        form(action="/register", method="POST")
          p Let's sign you up.
          p This is a test app and not secure. Choose an easy name and password (like "banana" "banana")
          label Username
          input(type="text", name="username")
          label Password
          input(type="password", name="password")
          br
          input(type="hidden", name="_csrf", value="#{csrfToken}")
          button.btn.btn-success Register New User
